{
  "name": "Notion x Excalidraw Helper",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "manifest_version": 3,
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*",
        "https://notion.so/*"
      ],
      "js": [
        "main.bundle.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/fonts/*.woff2"
      ],
      "matches": [
        "https://notion.so/*",
        "https://www.notion.so/*"
      ]
    }
  ]
}
